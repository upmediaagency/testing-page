  <script>
    // Real 15-minute countdown timer (900 seconds)
    let premiumTimeLeft = 15 * 60;
    const premiumCountdownElement = document.getElementById('premium-countdown');

    function updatePremiumCountdown() {
      if (premiumTimeLeft >= 0) {
        const minutes = Math.floor(premiumTimeLeft / 60);
        const seconds = premiumTimeLeft % 60;
        premiumCountdownElement.textContent = `${minutes < 10 ? '0' + minutes : minutes}:${seconds < 10 ? '0' + seconds : seconds}`;
        premiumTimeLeft--;
      } else {
        premiumCountdownElement.textContent = "00:00";
        clearInterval(premiumInterval);
      }
    }
    const premiumInterval = setInterval(updatePremiumCountdown, 1000);
  </script>
